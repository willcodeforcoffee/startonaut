<% content_for :title, "Welcome!" %>
<div class="max-w-md mx-auto mt-8 bg-white rounded-lg shadow-md p-6 text-center">
  <div class="mb-6">
    <div class="mx-auto w-16 h-16 bg-green-100 rounded-full flex items-center justify-center">
      <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
    </div>
  </div>
  <h1 class="text-2xl font-bold text-gray-900 mb-4">Welcome to Startonaut!</h1>
  <p class="text-gray-600 mb-6">
    Your account has been successfully created. We've sent a welcome email to your registered email address.
  </p>
  <div class="space-y-3">
    <%= link_to "Sign In", new_session_path, 
          class: "block w-full bg-bright-turquoise-600 hover:bg-bright-turquoise-700 text-white font-medium py-2 px-4 rounded-md transition-colors" %>
    <%= link_to "Back to Home", root_path, 
          class: "block w-full bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-4 rounded-md transition-colors" %>
  </div>
</div>