<div class="w-full font-pt-sans">
  <div class="flex justify-between items-center">
    <h1 class="font-pt-sans font-bold text-4xl">Bookmarks Page</h1>
  </div>
  <ul role="list" class="mx-auto mt-20 grid max-w-2xl grid-cols-2 gap-x-8 gap-y-16 text-center sm:grid-cols-3 md:grid-cols-4 lg:mx-0 lg:max-w-none lg:grid-cols-5 xl:grid-cols-6 font-pt-sans-narrow">
    <% @bookmarks.each do |bookmark| %>
      <li>
        <a href="<%= bookmark.url %>" target="_blank" rel="noopener noreferrer" class="text-blue-500 hover:underline">
          <%= favicon_image_tag(bookmark, class: "mx-auto size-24 rounded-full outline-1 -outline-offset-1 outline-black/5 dark:outline-white/10") %>
          <p class="mt-3 text-base/7 text-baby-powder-50 font-semibold tracking-tight"><%= bookmark.title %></p>
        </a>
      </li>
    <% end %>
  </ul>
</div>
