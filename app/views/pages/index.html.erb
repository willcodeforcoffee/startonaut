<div class="w-full font-pt-sans">
  <div class="flex flex-col justify-between mb-6">
    <h1 class="font-pt-sans font-bold text-4xl text-black mb-16">Welcome to Startonaut</h1>
    <div>
      <%= primary_link_to "New bookmark", new_bookmark_path %>
    </div>
  </div>
  <% if @favorite_tags.any? %>
    <div class="w-full mb-6">
      <h2 class="font-semibold text-2xl text-black mb-4 mr-6">Favorite Tags</h2>
      <div class="flex flex-row flex-wrap gap-2 items-center">
        <% @favorite_tags.each do |tag| %>
          <%= link_to tag_path(tag), class: "inline-flex items-center px-3 py-1 bg-gray-100 hover:bg-bright-turquoise-100 text-gray-700 hover:text-bright-turquoise-800 rounded-full transition-colors" do %>
            #<%= tag.name %>
            <span class="ml-1 text-gray-500">(<%= tag.bookmarks.count %>)</span>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
  <!-- Main content area with bookmarks and tags sidebar -->
  <div class="flex flex-col lg:flex-row gap-6">
    <!-- Tags sidebar - appears first on mobile (top), second on desktop (right) -->
    <div class="w-full lg:w-80 shrink-0 order-1 lg:order-2" data-controller="collapsible">
      <!-- Toggle button for mobile/tablet -->
      <button 
        type="button"
        class="lg:hidden w-full flex items-center justify-between p-3 bg-gray-50 rounded-md mb-4 hover:bg-gray-100 transition-colors"
        data-action="click->collapsible#toggle"
        data-collapsible-target="toggleButton"
        >
        <span class="font-medium text-gray-900">Tags</span>
        <svg class="w-5 h-5 text-gray-500 transform transition-transform" data-collapsible-target="chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>
      <!-- Tags content -->
      <div class="hidden lg:block" data-collapsible-target="content">
        <div class="bg-stone-400 border border-stone-700 rounded-lg p-4">
          <h2 class="font-semibold text-lg mb-4 text-black">Tags</h2>
          <% if @tags_by_letter.any? %>
            <div class="space-y-4">
              <% @tags_by_letter.each do |letter, tags| %>
                <div>
                  <h3 class="font-bold text-red-600 text-sm mb-2"><%= letter %></h3>
                  <div class="text-black flex flex-wrap gap-1">
                    <% tags.each do |tag| %>
                      <%= link_to tag_path(tag), class: "inline-flex items-center px-2 py-1 text-xs bg-gray-100 hover:bg-bright-turquoise-100 text-gray-700 hover:text-bright-turquoise-800 rounded-full transition-colors" do %>
                        <% if tag.favorite? %>
                          <span class="text-yellow-500 mr-1 size-2"><%= favorite_icon %></span>
                        <% end %>
                        #<%= tag.name %>
                        <span class="ml-1 text-gray-500">(<%= tag.bookmarks.count %>)</span>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500 text-sm">No tags found.</p>
          <% end %>
        </div>
      </div>
    </div>
    <!-- Bookmarks list (main content) - appears second on mobile (bottom), first on desktop (left) -->
    <div class="flex-1 order-2 lg:order-1">
      <% if @bookmarks.any? %>
        <ul role="list" class="mx-auto mt-5 gap-x-8 gap-y-16 text-center max-w-2xl grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:mx-0 lg:max-w-none lg:grid-cols-5 xl:grid-cols-6">
          <% @bookmarks.each do |bookmark| %>
            <li>
              <a href="<%= bookmark.url %>" target="_blank" rel="noopener noreferrer" class="text-black hover:underline">
                <%= favicon_image_tag(bookmark, class: "mx-auto size-12 md:size-24 rounded-[1vw] outline-1 -outline-offset-1 outline-black/5 dark:outline-bright-turquoise-300/10") %>
                <p class="mt-3 text-base/7 font-pt-sans-narrow font-semibold tracking-tight"><%= bookmark.title %></p>
              </a>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-center my-10">You haven't created any bookmarks yet!</p>
      <% end %>
    </div>
  </div>
</div>
