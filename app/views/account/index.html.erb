<% content_for :title, "Account" %>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Import / Export</h1>
  </div>
  <div class="space-y-4">
    <div class="border border-gray-700 rounded-lg p-6 bg-rich-black-900">
      <h2 class="text-xl font-semibold mb-2">Import Bookmarks</h2>
      <p class="text-baby-powder-300 mb-4">Upload a Netscape-format HTML bookmark file from your browser to import your bookmarks.</p>
      <%= primary_link_to "Import Bookmarks", new_import_bookmark_path %>
    </div>
  </div>
  <div class="space-y-4 mt-1">
    <div class="border border-gray-700 rounded-lg p-6 bg-rich-black-900">
      <h2 class="text-xl font-semibold mb-2">Export Bookmarks</h2>
      <p class="text-baby-powder-300 mb-4">Export a Netscape-format HTML bookmark file from your bookmarks collection.</p>
      <%= primary_link_to "Export Bookmarks", export_bookmarks_show_path %>
    </div>
  </div>
</div>