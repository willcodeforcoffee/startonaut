<div class="max-w-2xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold mb-2">Import Bookmarks</h1>
    <p class="text-gray-600">Upload a Netscape-format HTML bookmark file to import your bookmarks.</p>
  </div>
  <%= form_with url: import_bookmarks_path, method: :post, multipart: true, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :file, "Bookmark File", class: "block text-sm font-medium mb-2" %>
      <%= form.file_field :file, 
          accept: "text/html,text/plain", 
          required: true,
          class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none focus:ring-2 focus:ring-bright-turquoise focus:border-bright-turquoise" %>
      <p class="mt-2 text-sm text-gray-500">
        Supported format: Netscape Bookmark File Format (.html)
      </p>
    </div>
    <div class="flex gap-4">
      <%= form.submit "Import Bookmarks", 
          class: "px-6 py-2 bg-bright-turquoise text-rich-black font-semibold rounded-lg hover:bg-opacity-90 transition-colors" %>
      <%= link_to "Cancel", account_index_path, 
          class: "px-6 py-2 bg-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-300 transition-colors" %>
    </div>
  <% end %>
</div>
