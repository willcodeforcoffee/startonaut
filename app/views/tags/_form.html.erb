<%= form_with(model: tag, class: "contents") do |form| %>
  <% if tag.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(tag.errors.count, "error") %> prohibited this tag from being saved:</h2>
      <ul class="list-disc ml-6">
        <% tag.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.text_field :name %>
  </div>
  <div class="my-5">
    <%= form.check_box :favorite, class: "mr-2" %>
    <%= form.label :favorite, "Mark as favorite", class: "text-sm font-medium" %>
    <p class="text-gray-500 text-sm mt-1">Favorite tags appear in the navigation bar for easy access.</p>
  </div>
  <div class="inline">
    <%= form.submit %>
  </div>
<% end %>
