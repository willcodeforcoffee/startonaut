<% content_for :title, "Showing tag" %>
<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <h1 class="font-bold text-4xl">Showing tag</h1>
  <%= render @tag %>
  <%= primary_link_to "Edit this tag", edit_tag_path(@tag), class: "inline-block" %>
  <%= default_link_to "Back to tags", tags_path, class: "inline-block" %>
  <%= theme_button_to "Destroy this tag", @tag, style: :danger, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
</div>
